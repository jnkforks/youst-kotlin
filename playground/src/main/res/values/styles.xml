<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppHero" />

    <style name="AppHero.TextView" parent="TextAppearance.Bold">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/dimen_16</item>
        <item name="android:textSize">@dimen/size_26</item>
        <item name="android:layout_margin">@dimen/dimen_16</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppHero.Action" parent="ButtonText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/dimen_56</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
