<resources>

    <!--region Base application theme. -->

    <style name="SharedAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SharedAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="SharedAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SharedAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SharedAppTheme.Translucent">
        <!-- using a semi-transparent window background for the drag-back gesture -->
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:navigationBarColor">@color/immersive_bars</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!--endregion-->

    <!--region Text-->

    <style name="TextAppearance">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextAppearance.Regular" parent="TextAppearance">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="TextAppearance.Bold" parent="TextAppearance">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="TextAppearance.Light" parent="TextAppearance">
        <item name="android:fontFamily">@font/source_sans_pro_light</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <!--endregion-->

    <!--region Buttons -->

    <style name="ButtonBorderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonColored" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonColored.Primary" parent="ButtonColored">
        <item name="android:background">@color/yellow</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonText.Blue" parent="ButtonText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!--endregion-->

    <!--region Dialog-->

    <style name="Dialog" />

    <style name="Dialog.Title" parent="TextAppearance.Bold">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Dialog.Subtitle" parent="TextAppearance.Regular">
        <item name="android:textSize">16sp</item>
    </style>

    <!--endregion-->

    <!--region AppBar-->

    <style name="AppBar" />

    <style name="AppBar.Header" parent="TextAppearance.Bold">
        <item name="android:minHeight">80dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--endregion-->

    <!--region Showcase-->

    <style name="Showcase" />

    <style name="Showcase.Title" parent="TextAppearance.Bold">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Showcase.Subtitle" parent="TextAppearance.Regular">
        <item name="android:minHeight">46dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--endregion-->

    <!--region Challenge-->

    <style name="Challenge" />

    <style name="Challenge.Title" parent="TextAppearance.Bold">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Challenge.Subtitle" parent="TextAppearance.Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <!--endregion-->

    <!--region Pokemon-->

    <style name="Pokemon" />

    <style name="Pokemon.Title" parent="TextAppearance.Regular">
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--endregion-->

</resources>
