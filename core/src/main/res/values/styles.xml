<resources>

    <!--region Base application theme. -->

    <style name="SharedAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SharedAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="SharedAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SharedAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SharedAppTheme.Translucent">
        <!-- using a semi-transparent window background for the drag-back gesture -->
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:navigationBarColor">@color/immersive_bars</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!--endregion-->

    <!--region Dialog-->

    <style name="Dialog" />

    <style name="Dialog.Title" parent="TextAppearance.Bold">
        <item name="android:textSize">@dimen/size_22</item>
    </style>

    <style name="Dialog.Subtitle" parent="TextAppearance.Regular">
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <!--endregion-->

    <!--region AppBar-->

    <style name="AppBar" />

    <style name="AppBar.Header" parent="TextAppearance.Bold">
        <item name="android:minHeight">@dimen/dimen_80</item>
        <item name="android:textSize">@dimen/size_26</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--endregion-->

    <!--region Dashboard-->

    <style name="Dashboard" />

    <style name="Dashboard.Title" parent="TextAppearance.Bold">
        <item name="android:paddingStart">@dimen/dimen_2</item>
        <item name="android:paddingEnd">@dimen/dimen_2</item>
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="Dashboard.Subtitle" parent="TextAppearance.Regular">
        <item name="android:paddingStart">@dimen/dimen_2</item>
        <item name="android:paddingEnd">@dimen/dimen_2</item>
        <item name="android:textSize">@dimen/size_12</item>
    </style>

    <style name="Dashboard.OptionItem" parent="Dashboard" />

    <style name="Dashboard.OptionItem.Title" parent="TextAppearance.Bold">
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Dashboard.OptionItem.Subtitle" parent="TextAppearance.Regular">
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--endregion-->

    <!--region Challenge-->

    <style name="Challenge" />

    <style name="Challenge.Title" parent="TextAppearance.Bold">
        <item name="android:textSize">@dimen/size_26</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="Challenge.Subtitle" parent="TextAppearance.Regular">
        <item name="android:textSize">@dimen/size_18</item>
    </style>

    <style name="Challenge.Option" parent="Challenge" />

    <style name="Challenge.Option.Title" parent="TextAppearance.Bold">
        <item name="android:textSize">@dimen/size_22</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="Challenge.Option.Subtitle" parent="TextAppearance.Regular">
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <!--endregion-->

    <!--region Pokemon-->

    <style name="Pokemon" />

    <style name="Pokemon.Title" parent="TextAppearance.Regular">
        <item name="android:minHeight">@dimen/dimen_36</item>
        <item name="android:textSize">@dimen/size_12</item>
    </style>

    <!--endregion-->

</resources>
